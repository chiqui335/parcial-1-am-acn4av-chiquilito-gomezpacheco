<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d4a68" android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnVolver"> <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgLogoListado"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/minilogo_app"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txtListadoClaves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí aparecerán las claves"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center" />

    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" android:text="@string/Atrás"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/TextButton1" android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />   </androidx.constraintlayout.widget.ConstraintLayout>